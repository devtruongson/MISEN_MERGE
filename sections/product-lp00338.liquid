    <script>
      function updateCountdown() {
        const countdownElement = document.getElementById('countdown-timer');
        if (countdownElement) {
          let hours = 08;
          let minutes = 42;
          let seconds = 15;

          setInterval(() => {
            seconds--;
            if (seconds < 0) {
              seconds = 59;
              minutes--;
              if (minutes < 0) {
                minutes = 59;
                hours--;
                if (hours < 0) {
                  hours = 23;
                }
              }
            }

            countdownElement.textContent = `${hours.toString().padStart(2, '0')}:${minutes
              .toString()
              .padStart(2, '0')}:${seconds.toString().padStart(2, '0')}`;
