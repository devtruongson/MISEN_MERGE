            options: {{ product.options_with_values | json }},
            selected_or_first_available_variant: {{ product.selected_or_first_available_variant | json }},
            featuredImage: {
              url: '{{ product.featured_image | image_url: width: 1000 }}'
            },
            collections: {{ product.collections | json }},
            brandName: '{{ product.vendor | escape }}',
            productCategory: '{{ product.type | escape }}',
            productType: '{{ product.metafields.custom.product_type | escape }}',
            mainUSP: '{{ product.metafields.custom.usp | escape }}',
            productSize: '{{ product.metafields.custom.size | escape }}',
            targetCustomer: '{{ product.metafields.custom.target | escape }}',
            priceRange: '{{ product.metafields.custom.price_range | escape }}',
            availableReferenceImages: {{ product.metafields.custom.reference_images | json }}
